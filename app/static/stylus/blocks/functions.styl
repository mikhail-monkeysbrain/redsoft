.functions
  width 100%
  background-color #f5f9fc
  min-height 500px
  position relative
  padding-top 55px
  z-index 2
  color $blueText
  padding-bottom: 145px
  &::after
    content: ''
    width 100%
    height 96px
    display block
    position absolute
    left 0
    top 0
    top -96px
    background-image url('../img/styles/semi-circle.png')
    background-position top center
    background-repeat no-repeat
    background-size cover

  &--heading
    text-align center

  &--section
    max-width 1200px
    width 100%
    margin 0 auto

  &--figure
    display flex
    flex-direction: column
    justify-content center
    align-items center
    max-width 250px
    width 100%
    margin 0 auto
    padding: 52px 0 22px

    &--description
      text-align center
      color $blueText
      font-size 16px
      line-height 24px
      font-family $mainFontMedium
      margin-top 18px

    &--img
      width 80px
      height 80px
      border 1px solid rgba(22, 175, 224, .25);
      display flex
      justify-content center
      align-items center
      border-radius: 50%
      transition: $fast
      i
        display block

  &--sprite
    &__1
      sprite($s_f1)
    &__2
      sprite($s_f2)
    &__3
      sprite($s_f3)
    &__4
      sprite($s_f4)
    &__5
      sprite($s_f5)
    &__6
      sprite($s_f6)