.diary
  position relative
  
  .btn
    z-index 2
    position relative

  &--circle
    position: absolute
    opacity: .2;
    z-index: -1
    border-radius: 0 0 100%
    border-right: 2px solid #4c6fa6
    border-bottom: 2px solid #4c6fa6
    &-1
      width: 865px;
      height: 675px;
      left: -511px;
      top: -267px;
      z-index: 1;
    &-2
      width: 1094px
      height: 710px
      left: -151px
      top: -288px
      border: 2px solid #4c6fa6

  &-pulse
    position absolute
    right: 120px;
    bottom: -257px;
    width 485px
    height 485px
    background-image linear-gradient(180deg, rgba(14, 114, 183, .2), rgba(40, 43, 100, .2))
    border-radius: 50%
    right 120px
    &::after
      content: ''
      display block
      position absolute
      left 0
      right 0
      top 0
      margin 1px auto
      width 483px
      height 483px
      border-radius: 50%
      background #ffffff
      z-index 1
    i
      position absolute
      color #b8c9e5
      font-family $btnFont
      font-size 16px
      font-weight 500
      line-height 40px
      &::after
        display block
        content: ''
        border-radius: 50%
        width 10px
        height 10px
        background-color #e0eefd
        position relative
      &:nth-child(1)
        left: 10px
        top: 245px
        z-index: 2
        &::after
          left: -15px
          top: -32px
      &:nth-child(2)
        left: 245px
        top: 10px
        z-index: 2
        &::after
          left: -6px
          top: -55px
      &:nth-child(3)
        left: 450px
        top: 245px
        z-index: 2
        &::after
          left: 30px
          top: -32px

    &--circle
      width 279px
      height 279px
      display flex
      justify-content center
      align-items center
      z-index 2
      position absolute
      left 0
      right 0
      top 0
      background-image linear-gradient(180deg, rgba(14, 114, 183, .3), rgba(40, 43, 100, .3))
      margin 103px auto
      border-radius: 50%
      animation: shadowPulse 3s infinite
      animation-timing-function: linear

      &::after
        content: ''
        display block
        position absolute
        left 0
        right 0
        top 0
        margin 1px auto
        width 277px
        height 277px
        border-radius: 50%
        background #ffffff
        z-index 1

    &--img
      sprite($s_pulse)
      position relative
      z-index 2

@keyframes shadowPulse 
  0%, 100%
    box-shadow: 0 0 0 0 rgba(14, 114, 183, .3)
  50%
    box-shadow: 0px 0px 25px 0px rgba(14, 114, 183, .3)

a:target
  color #ff0000