// Базовые классы (для тэгов)

@import "../core/variables.styl";

*
  box-sizing border-box
  -webkit-tap-highlight-color transparent

body
  font 16px/1.5 $mainFont
  overflow-x: hidden

a,
button,
input
  &:focus
    outline 0

a
  text-decoration none

button
  border: 0

img
  width 100%
  height auto

figure
  margin 0

.h2
  font-family $mainFontMedium
  font-weight 500
  font-size 36px
  line-height 54px
  letter-spacing: -.15px
  margin 0

.h3
  font-family $mainFontMedium
  font-weight 500
  font-size 24px
  font-weight 500
  line-height 36.04px
  margin 0
  
.h4
  font-family $mainFontMedium
  font-weight 500
  font-size 20px
  font-weight 500
  line-height 36.04px
  margin 0

.ul
  margin 0
  padding 0
  &__markers
    padding-left 18px

.grid
  min-height: $gridHeight